{% extends 'base.html.twig' %}

{% block body %}
	<div id="toast-container" class="fixed top-4 right-4 z-50 space-y-2">
		{% include '_partials/toasts.html.twig' %}
	</div>

	<div class="flex">
		<!-- Sidebar -->
		<aside class="w-64 bg-gradient-to-b from-indigo-900 to-indigo-950 min-h-screen text-white flex flex-col fixed">
			<div class="p-5 border-b border-indigo-800">
				<a href="{{ path('app_dashboard') }}" class="flex items-center space-x-3">
					<div class="w-10 h-10 bg-indigo-600 rounded-lg flex items-center justify-center">
						<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
						</svg>
					</div>
					<div>
						<h1 class="text-lg font-bold text-white">LegalDocs</h1>
						<p class="text-xs text-indigo-300">Générateur de documents</p>
					</div>
				</a>
			</div>

			<nav class="flex-1 p-4 space-y-1">
				{% set currentRoute = app.request.attributes.get('_route') %}

				<a href="{{ path('app_dashboard') }}" class="flex items-center px-4 py-3 rounded-lg transition {{ currentRoute == 'app_dashboard' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800/50 hover:text-white' }}">
					<svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
					</svg>
					<span>Dashboard</span>
				</a>

				<a href="{{ path('app_template_index') }}" class="flex items-center px-4 py-3 rounded-lg transition {{ currentRoute starts with 'app_template' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800/50 hover:text-white' }}">
					<svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
					</svg>
					<span>Templates</span>
				</a>

				<a href="{{ path('app_document_index') }}" class="flex items-center justify-between px-4 py-3 rounded-lg transition {{ currentRoute starts with 'app_document' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800/50 hover:text-white' }}">
					<span class="flex items-center">
						<svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
						</svg>
						<span>Documents</span>
					</span>
					{% if pending_review_count is defined and pending_review_count > 0 %}
						<span class="bg-yellow-500 text-yellow-900 text-xs font-bold px-2 py-0.5 rounded-full">
							{{ pending_review_count }}
						</span>
					{% endif %}
				</a>

				{% if is_granted('ROLE_ADMIN_ORG') or is_granted('ROLE_SUPER_ADMIN') %}
					<div class="pt-4 mt-4 border-t border-indigo-800">
						<p class="px-4 text-xs font-semibold text-indigo-400 uppercase tracking-wider mb-2">Administration</p>

						<a href="{{ path('app_admin_user_index') }}" class="flex items-center px-4 py-3 rounded-lg transition {{ currentRoute starts with 'app_admin_user' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800/50 hover:text-white' }}">
							<svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
							</svg>
							<span>Utilisateurs</span>
						</a>

						{% if is_granted('ROLE_SUPER_ADMIN') %}
							<a href="{{ path('app_admin_organization_index') }}" class="flex items-center px-4 py-3 rounded-lg transition {{ currentRoute starts with 'app_admin_organization' ? 'bg-indigo-800 text-white' : 'text-indigo-200 hover:bg-indigo-800/50 hover:text-white' }}">
								<svg class="w-5 h-5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
								</svg>
								<span>Organisations</span>
							</a>
						{% endif %}
					</div>
				{% endif %}
			</nav>

			<div class="p-4 border-t border-indigo-800">
				<a href="{{ path('app_profile') }}" class="flex items-center p-3 rounded-lg hover:bg-indigo-800/50 transition group">
					<div class="w-10 h-10 bg-indigo-600 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
						<span class="font-medium text-white">{{ app.user.name|slice(0,1)|upper }}</span>
					</div>
					<div class="flex-1 min-w-0">
						<p class="text-sm font-medium text-white truncate">{{ app.user.name }}</p>
						<p class="text-xs text-indigo-300 truncate">{{ app.user.email }}</p>
					</div>
					<svg class="w-4 h-4 text-indigo-400 group-hover:text-white transition flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
					</svg>
				</a>
				<a href="{{ path('app_logout') }}" class="flex items-center px-4 py-2 mt-2 text-sm text-red-300 hover:text-red-100 hover:bg-red-900/30 rounded-lg transition">
					<svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
					</svg>
					<span>Déconnexion</span>
				</a>
			</div>
		</aside>

		<!-- Main content -->
		<main class="flex-1 ml-64">
			<header class="bg-white shadow-sm sticky top-0 z-40">
				<div class="px-6 py-4 flex items-center justify-between">
					<div>
						{% block breadcrumbs %}
							<h2 class="text-xl font-semibold text-gray-800">
								{% block page_title %}{% endblock %}
							</h2>
						{% endblock %}
					</div>

					<div class="flex items-center space-x-4">
						<form action="{{ path('app_search') }}" method="get" class="relative">
							<input type="text" name="q" placeholder="Rechercher..." value="{{ app.request.query.get('q') }}" class="w-64 pl-10 pr-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
							<svg class="w-5 h-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
							</svg>
						</form>
					</div>
				</div>
			</header>

			<div class="p-6">
				{% block content %}{% endblock %}
			</div>
		</main>
	</div>

	<!-- Chatbot Widget -->
	<div id="chatbot-widget" class="fixed bottom-6 right-6 z-50">
		<!-- Chat Window -->
		<div id="chat-window" class="hidden mb-4 w-96 bg-white rounded-2xl shadow-2xl border border-gray-200 overflow-hidden" style="height: 500px;">
			<!-- Header -->
			<div class="bg-indigo-600 px-4 py-3 flex items-center justify-between">
				<div class="flex items-center">
					<div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center mr-3">
						<svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
					</div>
					<div>
						<h3 class="font-semibold text-white text-sm">Assistant Juridique</h3>
						<p class="text-xs text-indigo-200" id="widget-status">En ligne</p>
					</div>
				</div>
				<div class="flex items-center space-x-2">
					<button onclick="window.clearWidgetChat()" class="text-white/70 hover:text-white transition cursor-pointer" title="Effacer">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
						</svg>
					</button>
					<button onclick="window.toggleChat()" class="text-white/70 hover:text-white transition cursor-pointer" title="Fermer">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>
			</div>

			<!-- Messages -->
			<div id="widget-messages" class="p-4 space-y-3 overflow-y-auto" style="height: 350px;">
				<div class="flex items-start">
					<div class="w-6 h-6 bg-indigo-100 rounded-full flex items-center justify-center mr-2 flex-shrink-0">
						<svg class="w-3 h-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
					</div>
					<div class="bg-gray-100 rounded-xl rounded-tl-none px-3 py-2 max-w-[85%]">
						<p class="text-sm text-gray-800">Bonjour ! Je suis votre assistant juridique. Comment puis-je vous aider ?</p>
					</div>
				</div>
			</div>

			<!-- Input -->
			<div class="px-4 py-3 border-t border-gray-100">
				<div class="flex items-center space-x-2">
					<input type="text" id="widget-input" placeholder="Votre question..." class="flex-1 px-3 py-2 text-sm border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" autocomplete="off">
					<button type="button" onclick="window.sendWidgetMessage()" id="widget-send-btn" class="p-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition disabled:opacity-50 cursor-pointer">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
						</svg>
					</button>
				</div>
			</div>
		</div>

		<!-- Toggle Button -->
		<button onclick="window.toggleChat()" id="chat-toggle" class="w-14 h-14 bg-indigo-600 rounded-full shadow-lg flex items-center justify-center hover:bg-indigo-700 transition transform hover:scale-105 cursor-pointer">
			<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
			</svg>
		</button>
	</div>

<script data-turbo-permanent id="chatbot-script">
	var widgetHistory = window.widgetHistory || [];
	var chatOpen = window.chatOpen || false;

	window.toggleChat = function() {
		var chatWindow = document.getElementById('chat-window');
		var chatToggle = document.getElementById('chat-toggle');
		if (!chatWindow) return;
		
		chatOpen = !chatOpen;
		window.chatOpen = chatOpen;
		
		if (chatOpen) {
			chatWindow.classList.remove('hidden');
			if (chatToggle) chatToggle.classList.add('hidden');
		} else {
			chatWindow.classList.add('hidden');
			if (chatToggle) chatToggle.classList.remove('hidden');
		}
	};

	window.clearWidgetChat = function() {
		widgetHistory = [];
		window.widgetHistory = [];
		var messages = document.getElementById('widget-messages');
		if (messages) {
			messages.innerHTML = '<div class="flex items-start"><div class="w-6 h-6 bg-indigo-100 rounded-full flex items-center justify-center mr-2 flex-shrink-0"><svg class="w-3 h-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg></div><div class="bg-gray-100 rounded-xl rounded-tl-none px-3 py-2 max-w-[85%]"><p class="text-sm text-gray-800">Conversation effacée. Comment puis-je vous aider ?</p></div></div>';
		}
	};

	window.sendWidgetMessage = async function() {
		var input = document.getElementById('widget-input');
		var messages = document.getElementById('widget-messages');
		if (!input || !messages) return;
		
		var message = input.value.trim();
		if (!message) return;

		// Ajouter message utilisateur
		messages.innerHTML += '<div class="flex justify-end mb-3"><div class="bg-indigo-600 text-white px-3 py-2 rounded-xl rounded-br-none max-w-[85%] text-sm">' + message + '</div></div>';
		input.value = '';
		messages.scrollTop = messages.scrollHeight;

		widgetHistory.push({ role: 'user', content: message });
		window.widgetHistory = widgetHistory;

		// Indicateur de chargement
		var loadingId = 'loading-' + Date.now();
		messages.innerHTML += '<div id="' + loadingId + '" class="flex items-start mb-3">' +
			'<div class="w-6 h-6 bg-indigo-100 rounded-full flex items-center justify-center mr-2 flex-shrink-0">' +
				'<svg class="w-3 h-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>' +
			'</div>' +
			'<div class="bg-gray-100 rounded-xl rounded-tl-none px-4 py-3">' +
				'<div class="flex space-x-1 items-center">' +
					'<div class="w-1.5 h-1.5 bg-indigo-500 rounded-full animate-bounce" style="animation-delay: 0ms;"></div>' +
					'<div class="w-1.5 h-1.5 bg-indigo-500 rounded-full animate-bounce" style="animation-delay: 150ms;"></div>' +
					'<div class="w-1.5 h-1.5 bg-indigo-500 rounded-full animate-bounce" style="animation-delay: 300ms;"></div>' +
				'</div>' +
			'</div>' +
		'</div>';
		messages.scrollTop = messages.scrollHeight;

		try {
			console.log('Envoi du message:', message);
			
			var controller = new AbortController();
			var timeoutId = setTimeout(function() { controller.abort(); }, 300000);
			
			var response = await fetch('/chat/send', {
				method: 'POST',
				headers: { 'Content-Type': 'application/json' },
				body: JSON.stringify({ 
					message: message,
					history: widgetHistory.slice(0, -1)
				}),
				signal: controller.signal
			});

			clearTimeout(timeoutId);
			console.log('Réponse status:', response.status);

			var loading = document.getElementById(loadingId);
			if (loading) loading.remove();

			var data = await response.json();
			console.log('Réponse data:', data);

			if (response.ok && data.success && data.response) {
				widgetHistory.push({ role: 'assistant', content: data.response });
				window.widgetHistory = widgetHistory;
				messages.innerHTML += '<div class="flex items-start mb-3"><div class="w-6 h-6 bg-indigo-100 rounded-full flex items-center justify-center mr-2 flex-shrink-0"><svg class="w-3 h-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg></div><div class="bg-gray-100 rounded-xl rounded-tl-none px-3 py-2 max-w-[85%]"><p class="text-sm text-gray-800">' + data.response.replace(/\n/g, '<br>') + '</p></div></div>';
			} else {
				var errorMsg = data.error || 'Erreur serveur';
				messages.innerHTML += '<div class="flex items-start mb-3"><div class="bg-red-100 rounded-xl px-3 py-2"><p class="text-sm text-red-600">' + errorMsg + '</p></div></div>';
			}
		} catch (error) {
			console.error('Erreur fetch:', error);
			var loading = document.getElementById(loadingId);
			if (loading) loading.remove();
			
			var errorText = error.name === 'AbortError' ? 'Timeout - L\'IA met trop de temps à répondre' : error.message;
			messages.innerHTML += '<div class="flex items-start mb-3"><div class="bg-red-100 rounded-xl px-3 py-2"><p class="text-sm text-red-600">' + errorText + '</p></div></div>';
		}

		messages.scrollTop = messages.scrollHeight;
	};

	document.addEventListener('keypress', function(e) {
		if (e.target && e.target.id === 'widget-input' && e.key === 'Enter') {
			e.preventDefault();
			window.sendWidgetMessage();
		}
	});
</script>
{% endblock %}